{
  "name": "llm-trace",
  "version": "0.1.1",
  "private": false,
  "description": "Structured execution traces for LLM debugging",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moondef/llm-trace"
  },
  "keywords": [
    "tracing",
    "debugging",
    "llm",
    "ai-agent",
    "execution-trace",
    "observability",
    "ndjson",
    "spans",
    "checkpoints",
    "runtime-debugging"
  ],
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "llm-trace": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "test": "node --experimental-strip-types --no-warnings --test 'src/**/*.test.ts'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "latest",
    "tsdown": "latest",
    "typescript": "latest"
  }
}
